{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>Category index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">Show</a>
						<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_category_new') }}" class="btn btn-success">Create new</a>

	<script>
		$(document).ready(function () {
$('.table').DataTable({
paging: true, // Enable pagination
searching: true, // Enable search functionality
ordering: true, // Enable sorting
pageLength: 10, // Set the number of rows per page
});
});
	</script>
{% endblock %}
