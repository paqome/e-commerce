{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}

	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Features</th>
				<th>Views</th>
				<th>Stock</th>
				<th>Status</th>
				<th>Weight</th>
				<th>Discount</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.features }}</td>
					<td>{{ product.views }}</td>
					<td>{{ product.stock }}</td>
					<td>{{ product.status ? 'Yes' : 'No' }}</td>
					<td>{{ product.weight }}</td>
					<td>{{ product.discount }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
						<a class="btn btn-secondary" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-success" href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
